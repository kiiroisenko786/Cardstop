@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if(product.ProductImages != null && product.ProductImages.Count() > 0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                        } else
                        {
                            <img src="images\product\awaiting-image.jpg" class="card-img-top rounded" />
                        }
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-dark">
                                        @string.Format("£{0}", product.ListPrice.ToString())
                                    </span>
                                </p>
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Product Code:
                                    @if (!string.IsNullOrEmpty(product.ProductCode))
                                    {
                                        <span class="text-dark">
                                            @product.ProductCode
                                        </span>
                                        } else
                                        {
                                            <span class="text-dark">
                                                N/A
                                            </span>
                                        }
                                </p>
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                In stock:
                                <span class="text-dark">
                                    @product.ProductStock
                                </span>
                                </p>
                            </div>
                            </div>
                            <div>
                                <a asp-action="Details"
                                asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>