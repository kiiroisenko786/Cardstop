<!-- Add RoleManagementVM -->
@model RoleManagementVM

<form method="post">
    <input asp-for="ApplicationUser.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Manage User Roles</h2>
            </hr>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ApplicationUser.Name" readonly class="p-0"></label>
            <input asp-for="ApplicationUser.Name" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
        </div>
        @{
            var companyVisibility = "display:none";
        }
        @if (Model.ApplicationUser.Role == SD.Role_Company)
        {
            companyVisibility = "display:block";
        }
        <div class="mb-3 row p-1">
            <select asp-for="ApplicationUser.CompanyId" style="@companyVisibility" asp-items="@Model.CompanyList" class="form-select"></select>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update Role</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>

<!-- Create scripts section
Get js for client side validation -->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selection = $('#ApplicationUser_Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#ApplicationUser_CompanyId').show();
                } else {
                    $('#ApplicationUser_CompanyId').hide();
                }
            })
        })
    </script>
}