<!-- Add list of categories model -->
@model List<Category>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <!-- See below for asp-controller and asp-action comments -->
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each object in CategoryList, ordered by DisplayOrder-->
            @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <!-- Display current iteration object name property in td -->
                    <td>@obj.Name</td>
                    <!-- Display current iteration object display order property in td-->
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <!-- There is no harm in explicitly declaring controller even if there is only one controller.
                        When working multiple files and folders, it is easier to know which controller and which action method is being invoked, rather than trying to figure out the default controller.
                        Best practice to write Controller -> Action Method for readability.-->
                        <div class="w-75 btn-group" role="group">
                             <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                             </a>
                            <!-- To pass the ID of the selected category, asp-route-id is used to pass any property.
                            Id is passed and is automatically mapped with the name -->
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>